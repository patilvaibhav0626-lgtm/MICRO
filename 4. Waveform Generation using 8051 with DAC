1)For Square Wave Generation (2khz frequency): - 
#include <reg51.h> 
void delay() 
{ 
    TMOD = 0x01; // Timer 0 Mode 1      
    TH0 = 0xFF;     
    TL0 = 0x06; 
 
    TR0 = 1;       
    while (TF0 == 0);   
    TR0 = 0;       
    TF0 = 0;      
 } 
 
void main ()  
  {     
 while (1) 
                  { 
   P1 = 0XFF;        
   delay ();      
   P1 = 0x00;      
   delay (); 
  }  
 }



2) Code for Triangular Wave: - 
#include<reg51.h> 
void delay() 
{ 
unsigned int i, j; 
for(i=0; i<200; i++) 
for(j=0; j<200; j++); 
} 
void main() 
{ 
unsigned char i; 
while(1) 
{ 
for(i = 0; i <= 255; i++) 
{ 
P2 = i;     
delay(); 
} 
for (i=255;i>=0;i--) 
{ 
P2=i; 
delay(); 
}  
} 
}



3) Code for Sawtooth 
#include <reg51.h> 
void delay() 
{ 
} 
unsigned int i, j; 
for(i=0; i<200; i++) 
for(j=0; j<200; j++); 
void main() 
{ 
} 
unsigned char i; 
while(1) 
{ 
} 
for(i = 0; i <= 255; i++) 
{ 
} 
P2 = i; 
delay(); 
P2 = 0x00; 
delay();
